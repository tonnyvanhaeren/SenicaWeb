@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}

<div class="row pt-5">
    <div class="card">
        <h3 class="text-primary">Roles - Users</h3>
    </div>
    <div class="card-body">
        <table class="table table-sm table-bordered mt-4">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Users</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td i-role="@role.Id"></td>
                    <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update User Role</a></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete Role
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="card-footer text-body-secondary">
        <a asp-action="Create" class="btn btn-primary">Create a Role</a>
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">Home</a>
    </div>        
</div>