@model AppUser
@{
	ViewData["Title"] = "UPDATE USER";
}
<div class="row pt-5">
    <div class="col-lg-6 col-md-8 col-sm-12">
        <div class="card">
            <div class="card-header">
            <h3 class="text-primary">Update user</h3>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <form asp-action="Update" method="post">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" disabled/>
            </div>    
            <div class="form-group">
                <label asp-for="Voornaam"></label>
                <input asp-for="Voornaam" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Familienaam"></label>
                <input asp-for="Familienaam" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="GsmNr"></label>
                <input asp-for="GsmNr" class="form-control" />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input name="password" class="form-control" />
            </div>
        </div>
        <div class="card-footer text-body-secondary">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-success">Home</a>
        </div>                        
        </form>            
        </div>

    </div>
</div>



<a asp-action="Index" class="btn btn-secondary">Back</a>



