@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "READ USER";
}

<div class="row pt-5">
    <div class="card">
        <h3 class="text-primary">Users</h3>
    </div>
    <div class="card-body">
        <table class="table table-sm table-bordered mt-4">
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Voornaam</th>
                <th>Familienaam</th>
                <th>Mobiel</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
            @foreach (AppUser user in Model)
            {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.Voornaam</td>
                <td>@user.Familienaam</td>
                <td>@user.GsmNr</td>
                <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">Update</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
            }
        </table>
    </div>
    <div class="card-footer text-body-secondary">
        <a asp-action="Create" class="btn btn-primary">Create a User</a>
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">Home</a>
    </div>        
</div>