@model TeacherInput
@{
    ViewData["Title"] = "Create Teacher";
}

<div class="row pt-5">
    <div class="col-lg-6 col-md-8 col-sm-12">
        <div class="card">
            <div class="card-header">
                <h3 class="text-primary">Teacher</h3>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <form method="post">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Voornaam"></label>
                    <input asp-for="Voornaam" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Familienaam"></label>
                    <input asp-for="Familienaam" class="form-control" />
                </div>                
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>     
                <div class="form-group">
                    <label asp-for="GsmNr"></label>
                    <input asp-for="GsmNr" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="FotoUrl"></label>
                    <input asp-for="FotoUrl" class="form-control" />
                </div>                
            </div>
            <div class="card-footer text-body-secondary">
                <button type="submit" class="btn btn-primary">Save Teacher</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-success">Back</a>
            </div>
            </form>
        </div>
    </div>
</div>

